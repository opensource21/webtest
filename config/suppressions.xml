<?xml version="1.0"?>

<!DOCTYPE suppressions PUBLIC
    "-//Puppy Crawl//DTD Suppressions 1.1//EN"
    "http://www.puppycrawl.com/dtds/suppressions_1_1.dtd">

<suppressions>
    <!-- You can't use "/" here because it fails. "." can be used for "/" and "\".
          Another possibility is ".* Test.java" -->
    <suppress checks="JavadocPackage" files=".*src.test.java.*.java"/>
    <suppress checks="NewlineAtEndOfFile" files=".*.gitkeep"/>
    <suppress checks="(VisibilityModifier|MagicNumber)" files=".*src.test.java.org.selophane.*.java"/>
    <!-- copied code which can't be easily fix. -->
    <suppress checks=".*" files=".*src.main.java.de.ppi.selenium.browser.*.java"/>
    <suppress checks="Javadoc.*" files=".*src.main.java.org.selophane.*.java"/>
    <suppress checks="Javadoc.*" files=".*src.test.java.org.selophane.*.java"/>
</suppressions>

